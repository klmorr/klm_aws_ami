{
    "builders": [
        {
            "ami_description": "{{user `prefix`}}-{{user `os`}}-latest",
            "ami_name": "{{user `prefix`}}-{{user `os`}}",
            "communicator": "winrm",
            "force_deregister": true,
            "instance_type": "{{user `instance_type`}}",
            "region": "{{user `region`}}",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "{{user `filter_name`}}"
                },
                "most_recent": true,
                "owners": "{{user `owners`}}"
            },
            "winrm_insecure": true,
            "winrm_port": 5986,
            "winrm_timeout": "30m",
            "winrm_use_ssl": true,
            "winrm_username": "Administrator",
            "tags": {
                "Name": "{{user `prefix`}}-{{user `os`}}-{{isotime \"02Jan2006\"}}",
                "description": "{{user `prefix`}}-{{user `os`}}-ami",
                "builder": "{{user `builder`}}"
            },
            "type": "amazon-ebs",
            "user_data_file": "./scripts/{{user `os`}}/userdata.txt"
        }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "script": "./scripts/{{user `os`}}/Invoke-Provisioners.ps1"
        }
    ],
    "post-processors": [
        {
            "type": "manifest",
            "output": "{{user `os`}}_manifest.json",
            "strip_path": true
        }
    ]
}