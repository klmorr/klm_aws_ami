{
    "variables": {
        "builder": "packer",
        "instance_type": "t2.micro",
        "name": "amazon-linux2-latest",
        "os": "amazon_linux_2",
        "owners": "amazon",
        "prefix": "kmo",
        "region": "{{env `AWS_DEFAULT_REGION`}}",
        "ssh_username": "ec2-user",
        "source_ami": "*amzn2-ami-hvm-*",
        "type": "base_amz2_ami"
    },
    "builders": [
        {
            "ami_description": "{{user `prefix`}}-{{user `os`}}-latest",
            "ami_name": "{{user `prefix`}}-{{user `os`}}",
            "force_deregister": true,
            "instance_type": "{{user `instance_type`}}",
            "region": "{{user `region`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "architecture": "x86_64",
                    "name": "{{user `source_ami`}}",
                    "block-device-mapping.volume-type": "gp2",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "{{user `owners`}}"
                ],
                "most_recent": true
            },
            "type": "amazon-ebs",
            "tags": {
                "Name": "{{user `prefix`}}-{{user `os`}}-{{isotime \"02Jan2006\"}}",
                "description": "{{user `description`}}",
                "builder": "{{user `builder`}}",
                "type": "{{user `type`}}"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "./scripts/{{user `os`}}/provisioners.sh"
        }
    ],
    "post-processors": [
        {
            "type": "manifest",
            "output": "{{user `os`}}_manifest.json",
            "strip_path": true
        }
    ]
}